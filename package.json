{
  "name": "@ldesign/color",
  "type": "module",
  "version": "1.1.0-alpha.2",
  "description": "A powerful, performant, and easy-to-use color manipulation library with design systems integration (monorepo wrapper)",
  "author": "ldesign",
  "license": "MIT",
  "private": true,
  "keywords": [
    "color",
    "color-manipulation",
    "color-conversion",
    "rgb",
    "hsl",
    "hsv",
    "contrast",
    "wcag",
    "palette",
    "theme",
    "typescript",
    "framework-agnostic"
  ],
  "sideEffects": [
    "*.css",
    "*.vue.css",
    "*/ThemePicker.css",
    "*/VueThemeModeSwitcher.vue.css"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./accessibility": {
      "types": "./es/accessibility/index.d.ts",
      "import": "./es/accessibility/index.js",
      "require": "./lib/accessibility/index.cjs"
    },
