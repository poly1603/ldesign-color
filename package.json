  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "types": "./es/index.d.ts",
  "files": [
    "LICENSE",
    "README.md",
    "es",
    "lib",
    "package.json"
  ],
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' build",
    "build:core": "pnpm --filter='@ldesign/color-core' build",
    "build:vue": "pnpm --filter='@ldesign/color-vue' build",
    "build:react": "pnpm --filter='@ldesign/color-react' build",
    "build:svelte": "pnpm --filter='@ldesign/color-svelte' build",
    "build:solid": "pnpm --filter='@ldesign/color-solid' build",
    "build:angular": "pnpm --filter='@ldesign/color-angular' build",
    "dev": "pnpm -r --parallel --filter='./packages/*' dev",
    "dev:core": "pnpm --filter='@ldesign/color-core' dev",
    "dev:vue": "pnpm --filter='@ldesign/color-vue' dev",
    "dev:react": "pnpm --filter='@ldesign/color-react' dev",
    "dev:svelte": "pnpm --filter='@ldesign/color-svelte' dev",
    "dev:solid": "pnpm --filter='@ldesign/color-solid' dev",
    "dev:angular": "pnpm --filter='@ldesign/color-angular' dev",
    "type-check": "pnpm -r --filter='./packages/*' type-check",
    "clean": "pnpm -r --filter='./packages/*' clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0",
    "svelte": ">=3.0.0",
    "solid-js": ">=1.0.0",
    "@angular/core": ">=17.0.0"
  },
  "style": "./dist/index.css",
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "solid-js": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    }
  },
  "dependencies": {
    "@ldesign/color-core": "workspace:*",
    "@ldesign/color-vue": "workspace:*",
    "@ldesign/color-react": "workspace:*",
    "@ldesign/color-svelte": "workspace:*",
    "@ldesign/color-solid": "workspace:*",
    "@ldesign/color-angular": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "^9.18.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  }
