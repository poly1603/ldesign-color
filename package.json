{
  "name": "@ldesign/color",
  "version": "2.0.0",
  "description": "A powerful, performant, and easy-to-use color manipulation library with design systems integration (monorepo wrapper)",
  "keywords": [
    "color",
    "color-manipulation",
    "color-conversion",
    "rgb",
    "hsl",
    "hsv",
    "contrast",
    "wcag",
    "palette",
    "theme",
    "typescript",
    "framework-agnostic"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "*.css",
    "*.vue.css",
    "*/ThemePicker.css",
    "*/VueThemeModeSwitcher.vue.css"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    }
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build -f esm,cjs,dts",
    "build:core": "pnpm --filter='@ldesign/color-core' build",
    "build:vue": "pnpm --filter='@ldesign/color-vue' build",
    "dev": "ldesign-builder build -f esm,cjs,dts --watch",
    "dev:core": "pnpm --filter='@ldesign/color-core' dev",
    "dev:vue": "pnpm --filter='@ldesign/color-vue' dev",
    "type-check": "pnpm -r --filter='./packages/*' type-check",
    "clean": "pnpm -r --filter='./packages/*' clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@ldesign/color-core": "workspace:*",
    "@ldesign/color-vue": "workspace:*"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "eslint": "^9.18.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  },
  "private": true,
  "style": "./dist/index.css",
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}