      "require": "./lib/locales/index.cjs"
    },
    "./locales/*": {
      "types": "./es/locales/*.d.ts",
      "import": "./es/locales/*.js",
      "require": "./lib/locales/*.cjs"
    },
    "./palette/*": {
      "types": "./es/palette/*.d.ts",
      "import": "./es/palette/*.js",
      "require": "./lib/palette/*.cjs"
    },
    "./performance": {
      "types": "./es/performance/index.d.ts",
