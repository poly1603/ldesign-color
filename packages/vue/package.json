{
  "name": "@ldesign/color-vue",
  "version": "1.0.0",
  "description": "Vue 3 components and composables for @ldesign/color-core",
  "keywords": [
    "color",
    "vue",
    "vue3",
    "theme",
    "composables",
    "components"
  ],
  "author": "ldesign",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.cjs"
    },
    "./composables/*": {
      "types": "./es/composables/*.d.ts",
      "import": "./es/composables/*.js",
      "require": "./lib/composables/*.cjs"
    },
    "./plugin": {
      "types": "./es/plugin/index.d.ts",
      "import": "./es/plugin/index.js",
      "require": "./lib/plugin/index.cjs"
    },
    "./plugin/*": {
      "types": "./es/plugin/*.d.ts",
      "import": "./es/plugin/*.js",
      "require": "./lib/plugin/*.cjs"
    },
    "./plugins": {
      "types": "./es/plugins/index.d.ts",
      "import": "./es/plugins/index.js",
      "require": "./lib/plugins/index.cjs"
    },
    "./plugins/*": {
      "types": "./es/plugins/*.d.ts",
      "import": "./es/plugins/*.js",
      "require": "./lib/plugins/*.cjs"
    },
    "./es/components/ColorPicker.vue.css": "./es/components/ColorPicker.vue.css",
    "./es/components/PaletteDisplay.vue.css": "./es/components/PaletteDisplay.vue.css",
    "./es/components/ThemeColorPicker.vue.css": "./es/components/ThemeColorPicker.vue.css",
    "./es/components/ThemeModeSwitcher.vue.css": "./es/components/ThemeModeSwitcher.vue.css",
    "./es/components/ThemeProvider.vue.css": "./es/components/ThemeProvider.vue.css",
    "./es/index.css": "./es/index.css",
    "./lib/components/ColorPicker.vue.css": "./lib/components/ColorPicker.vue.css",
    "./lib/components/PaletteDisplay.vue.css": "./lib/components/PaletteDisplay.vue.css",
    "./lib/components/ThemeColorPicker.vue.css": "./lib/components/ThemeColorPicker.vue.css",
    "./lib/components/ThemeModeSwitcher.vue.css": "./lib/components/ThemeModeSwitcher.vue.css",
    "./lib/components/ThemeProvider.vue.css": "./lib/components/ThemeProvider.vue.css",
    "./lib/index.css": "./lib/index.css",
    "./dist/index.css": "./dist/index.css",
    "./dist/index.min.css": "./dist/index.min.css"
  },
  "main": "./lib/index.cjs",
  "module": "./es/index.js",
  "types": "./es/index.d.ts",
  "unpkg": "./dist/index.min.js",
  "jsdelivr": "./dist/index.min.js",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "es",
    "lib",
    "dist"
  ],
  "scripts": {
    "build": "ldesign-builder build",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "node -e \"const fs=require('fs'); ['es','lib','dist','.tsbuildinfo'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch{}})\""
  },
  "peerDependencies": {
    "@ldesign/color-core": "workspace:*",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@ldesign/builder": "workspace:*",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "typescript": "^5.7.3",
    "vue": "^3.0.0"
  }
}