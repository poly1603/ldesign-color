{
  "extends": "../../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./es",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "es",
    "lib",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}

