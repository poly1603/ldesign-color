{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,
    "outDir": "es",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/*.ts",
    "src/constants/**/*",
    "src/core/**/*",
    "src/palette/**/*",
    "src/themes/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "es",
    "lib",
    "**/*.spec.ts",
    "**/*.test.ts",
    "examples"
  ]
}
